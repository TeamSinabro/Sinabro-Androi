<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_sinabro_onboarding"
        tools:context=".presentation.ui.onboarding.OnBoardingOneFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_four_onboarding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="15dp"
            >

            <ImageView
                android:id="@+id/img_four_onboarding"
                android:layout_width="250dp"
                android:layout_height="380dp"
                android:background="@drawable/onboarding_four"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_four_onboarding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_bold"
            android:text="@string/four_onboarding"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:lineHeight="30sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_four_onboarding" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
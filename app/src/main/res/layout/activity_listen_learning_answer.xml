<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.listenlearning.ListenLearningAnswerActivity">

        <TextView
            android:id="@+id/text_listen_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="43dp"
            android:background="@drawable/rectangle_fill_sinabro_gray_radius_5"
            android:fontFamily="@font/notosanskr_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_listen_user_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="43dp"
            android:background="@drawable/rectangle_fill_sinabro_gray_radius_5"
            android:fontFamily="@font/notosanskr_bold"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_listen_answer" />



        <TextView
            android:id="@+id/text_listen_learning_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rectangle_fill_dark_pink_radius_10"
            android:fontFamily="@font/notosanskr_bold"
            android:gravity="center_horizontal"
            android:paddingHorizontal="35dp"
            android:text="@string/main"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_listen_learning_next"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_listen_learning_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rectangle_fill_dark_pink_radius_10"
            android:fontFamily="@font/notosanskr_bold"
            android:gravity="center_horizontal"
            android:paddingHorizontal="28dp"
            android:text="@string/next_problem"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_listen_learning_main"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>